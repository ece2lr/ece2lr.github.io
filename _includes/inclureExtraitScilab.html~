{% highlight scilab %}{% 
  for ligne in lignes %}{% 
    assign ligneTest = ligne | remove: "/" | strip %}{% 
    unless baliseDebut == ligneTest %}{% 
      continue %}{% 
    else %}{% 
      assign numLigneMatch = forloop.index %}{% 
      break %}{% 
    endunless %}{% 
  endfor %}{% 
  for ligne in lignes offset:numLigneMatch %}{% 
    assign ligneTest = ligne | remove: "/" | strip %}{% 
    unless baliseFin == ligneTest %}
{{ ligne }}{% 
    else %}{% 
      break %}{% 
    endunless %}{% 
    endfor %}{% 
